<!-- Navbar -->
<nav class="bg-white shadow-sm sticky top-0 z-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex flex-col sm:flex-row items-center justify-between h-auto sm:h-16 py-4 sm:py-0">
            <!-- Logo -->
            <a href="/" class="flex items-center mb-4 sm:mb-0">
                <h1 class="text-xl sm:text-2xl font-bold text-gray-900">REad & GroW</h1>
            </a>

            <!-- Search Bar -->
            <div class="flex-1 w-full sm:max-w-2xl px-0 sm:px-6 mb-4 sm:mb-0">
                <div class="relative">
                    <form id="searchForm">
                        <input type="search" 
                               name="query" 
                               placeholder="Search for books..." 
                               class="w-full px-4 py-2 rounded-full border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent text-sm sm:text-base"
                               aria-label="Search">
                        <button type="submit" 
                                class="absolute right-3 top-1/2 -translate-y-1/2 text-gray-400 hover:text-gray-600"
                                aria-label="Submit search">
                            <i class="fas fa-search text-sm sm:text-base"></i>
                        </button>
                    </form>
                    
                    <script>
                        document.getElementById('searchForm').addEventListener('submit', (e) => {
                            e.preventDefault();
                            const searchInput = document.querySelector('input[name="query"]').value.trim();
                            if (searchInput) {
                                window.location.href = `/shop?category=${encodeURIComponent('<%= %>')}&search=${encodeURIComponent(searchInput)}&page=1&limit=6`;
                            }
                        });
                    </script>
                </div>
            </div>

            <!-- Navigation Icons -->
            <div class="flex items-center space-x-4 sm:space-x-6">
                <a href="/shop" class="text-gray-600 hover:text-gray-900 transition-colors duration-200" aria-label="Shop">
                    <i class="fas fa-store text-lg sm:text-xl"></i>
                </a>
                <a href="/wishlist" class="text-gray-600 hover:text-gray-900 transition-colors duration-200" aria-label="Wishlist">
                    <i class="fas fa-heart text-lg sm:text-xl"></i>
                </a>
                <div class="relative">
                    <a href="/cart"
                       class="text-gray-600 hover:text-gray-900 transition-colors duration-200"
                       aria-label="Shopping cart">
                        <i class="fas fa-shopping-cart text-lg sm:text-xl"></i>
                        <!-- <span
                            class="absolute -top-2 -right-2 bg-green-500 text-white w-5 h-5 rounded-full flex items-center justify-center text-xs font-bold">
                            1
                        </span> -->
                    </a>
                </div>                
                <a href="/profile/<%= user.id || user._id %>" class="text-gray-600 hover:text-gray-900 transition-colors duration-200" aria-label="Profile">
                    <i class="fas fa-user text-lg sm:text-xl"></i>
                </a>
            </div>
        </div>
    </div>
</nav>