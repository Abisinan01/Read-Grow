<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Wallet - Read & Grow</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://fonts.googleapis.com/css2?family=Inria+Sans:wght@400;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
  <style>
    .font-inria { font-family: 'Inria Sans', sans-serif; }
    body { background-color: #F5F6FA; }
  </style>
</head>
<body class="font-inria">
  <!-- Navbar (Converted from your provided EJS to HTML) -->
  <nav class="bg-white shadow-sm sticky top-0 z-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-center justify-between h-16">
        <!-- Logo -->
        <a href="/" class="flex items-center">
          <h1 class="text-2xl font-bold text-gray-900">REad & GroW</h1>
        </a>
        <!-- Search Bar -->
        <div class="flex-1 max-w-2xl px-6">
          <div class="relative">
            <form>
              <input type="search" 
                     name="query" 
                     placeholder="Search for books..." 
                     class="w-full px-4 py-2 rounded-full border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                     aria-label="Search">
              <button type="submit" 
                      class="absolute right-3 top-1/2 -translate-y-1/2 text-gray-400 hover:text-gray-600"
                      aria-label="Submit search">
                <i class="fas fa-search"></i>
              </button>
            </form>
          </div>
        </div>
        <!-- Navigation Icons -->
        <div class="flex items-center space-x-6">
          <a href="/read-and-grow/shop" class="text-gray-600 hover:text-gray-900" aria-label="Shop">
            <i class="fas fa-store text-xl"></i>
          </a>
          <a href="/read-and-grow/wishlist" class="text-gray-600 hover:text-gray-900" aria-label="Wishlist">
            <i class="fas fa-heart text-xl"></i>
          </a>
          <a href="/read-and-grow/cart" class="text-gray-600 hover:text-gray-900" aria-label="Shopping cart">
            <i class="fas fa-shopping-cart text-xl"></i>
          </a>
          <a href="/read-and-grow/profile/user123" class="text-gray-600 hover:text-gray-900" aria-label="Profile">
            <i class="fas fa-user text-xl"></i>
          </a>
        </div>
      </div>
    </div>
  </nav>

  <!-- Wallet Content -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-10">
    <!-- Header -->
    <div class="flex justify-between items-center mb-6">
      <h1 class="text-2xl font-bold text-gray-900">Your Wallet</h1>
      <a href="/read-and-grow/profile/user123" class="text-blue-600 hover:text-blue-800 font-medium transition duration-200">
        Go Back
      </a>
    </div>

    <!-- Wallet Card -->
    <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-200 mb-6">
      <!-- Wallet Balance -->
      <div class="flex flex-col sm:flex-row justify-between items-center mb-6">
        <div>
          <h2 class="text-lg font-semibold text-gray-900">Wallet Balance</h2>
          <% if(wallet){ %>
          <p class="text-3xl font-bold text-blue-700 mt-2">Rs. <%= (wallet.balance).toFixed(2) %></p>
          <% }else{ %>
          <p class="text-3xl font-bold text-blue-700 mt-2">Rs. 0.00</p>
        <% } %>
        </div>
        <!-- <div class="flex space-x-3 mt-4 sm:mt-0">
          <img src="https://www.flaticon.com/free-icon/wallet-filled-money-tool_60484" alt="">
      </div> -->
    </div>

    <!-- Transaction History -->
    <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-200">
      <h2 class="text-lg font-semibold text-gray-900 mb-4">Transaction History</h2>
      <!-- Example Transactions -->
      <div class="space-y-3">
        <!-- Transaction 1 -->
         <% if(wallet && wallet.transactions.length>0) {%>
         <% wallet.transactions.forEach(trans=>{ %>
          <% if(trans.transactionType === 'credit'){%>
              <div class="flex justify-between items-center p-4 bg-gray-100 rounded-lg">
                <div class="flex items-center space-x-4">
                    <div class="w-8 h-8 flex items-center justify-center rounded-full bg-green-100">
                    <i class="fas fa-arrow-down text-green-600"></i>
                    </div>
                    <div>
                    <p class="font-medium text-gray-900">Credited</p>
                    <p class="text-sm text-gray-600">              
                        <%= (trans.createdAt).toLocaleString() %></p>
                    </div>
                </div>
                <p class="text-lg font-semibold text-green-600">+ Rs. <%= (trans.amount).toFixed(2) %></p>
              </div>
          <% }else if(trans.transactionType === 'debit'){ %>
            <div class="flex justify-between items-center p-4 bg-gray-100 rounded-lg">
              <div class="flex items-center space-x-4">
                  <div class="w-8 h-8 flex items-center justify-center rounded-full bg-red-100">
                  <i class="fas fa-arrow-up text-red-600"></i>
                  </div>
                  <div>
                  <p class="font-medium text-red-600">Debited</p>
                  <p class="text-sm text-gray-600">              
                      <%= (trans.createdAt).toLocaleString() %></p>
                  </div>
              </div>
              <p class="text-lg font-semibold text-red-600">- Rs. <%= (trans.amount).toFixed(2) %></p>
            </div>
          <% } %>
        <% }) %>
        <% }else{%>
        <p class="text-gray-600">No transactions available.</p>
       <% } %>
    </div>
  </div>
</body>
</html>