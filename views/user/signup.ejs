<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up Form</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- Notyf Validation Plugin -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/notyf@3/notyf.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
        integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <script src="/js/user/signup.js" defer></script>
</head>
<style>
    .error {
        color: red;
        font-size: 13px;
    }
</style>

<body class="bg-gray-100 flex items-center justify-center min-h-screen">
    <div class="bg-white p-8 rounded-[30px] shadow-lg w-96">
        <h2 class="text-2xl font-semibold text-center mb-6">Sign Up</h2>

        <form class="space-y-4" id="form" method="post" novalidate>
            <div>
                <input type="text" placeholder="Username" id="username" required
                    class="w-full px-4 py-2 rounded-[15px] border border-gray-300 focus:outline-none focus:ring-2 focus:ring-red-500">
            </div>

            <div>
                <input type="email" placeholder="Email" id="email" required
                    class="w-full px-4 py-2 rounded-[15px] border border-gray-300 focus:outline-none focus:ring-2 focus:ring-red-500">
            </div>

            <div>
                <input type="text" placeholder="Phone number" id="phoneNumber" required
                    class="w-full px-4 py-2 rounded-[15px] border border-gray-300 focus:outline-none focus:ring-2 focus:ring-red-500">
            </div>

            <div class="relative">
                <input type="password" placeholder="Password" id="password" required
                    class="w-full px-4 py-2 rounded-[15px] border border-gray-300 focus:outline-none focus:ring-2 focus:ring-red-500 pr-10">
                <span class="password-toggle-icon absolute inset-y-0 right-3 flex items-center cursor-pointer">
                    <i class="fas fa-eye" data-target="password"></i>
                </span>
            </div>

            <div class="relative">
                <input type="password" placeholder="Confirm Password" id="confirmPassword" required
                    class="w-full px-4 py-2 rounded-[15px] border border-gray-300 focus:outline-none focus:ring-2 focus:ring-red-500 pr-10">
                <span class="password-toggle-icon absolute inset-y-0 right-3 flex items-center cursor-pointer">
                    <i class="fas fa-eye" data-target="confirmPassword"></i>
                </span>
            </div>

            <div class="flex justify-between text-[12px] text-gray-600">
                <p>
                    Already have an account?
                    <a href="/login" class="text-red-600 hover:underline">Login</a>
                </p>
                <a href="#" class="text-red-600 hover:underline">Forgot password?</a>
            </div>

            <button type="submit"
                class="w-full bg-red-600 text-white py-2 rounded-[20px] hover:bg-red-700 transition duration-300">
                Signup
            </button>
        </form>

        <!-- Google Authentication Button -->
        <div class="flex justify-center mt-2">
            <a href="/auth/google" 
               class="w-full border-[1px] border-gray-300 text-white py-2 rounded-[20px] hover:bg-gray-300 transition duration-300 flex items-center justify-center gap-2">
                <img src="https://img.icons8.com/?size=100&id=17949&format=png&color=ffffff" alt="Google Logo" class="h-6">
                <span class="text-black">Sign up with Google</span>
            </a>
        </div> 
    </div>

    <script src="https://cdn.jsdelivr.net/npm/notyf@3/notyf.min.js"></script>
    <script>
        // Single script to handle both password toggles
        document.querySelectorAll('.password-toggle-icon i').forEach(toggle => {
            toggle.addEventListener('click', function () {
                const targetId = this.getAttribute('data-target');
                const inputField = document.getElementById(targetId);

                if (inputField.type === 'password') {
                    inputField.type = 'text';
                    this.classList.remove('fa-eye');
                    this.classList.add('fa-eye-slash');
                } else {
                    inputField.type = 'password';
                    this.classList.remove('fa-eye-slash');
                    this.classList.add('fa-eye');
                }
            });
        });
    </script>
</body>

</html>