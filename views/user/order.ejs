<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Your Orders - REad & GroW</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>

<body class="bg-gray-100 min-h-screen">
    <!-- Navbar -->
    <%- include("../partials/user/navBar.ejs") %>

  <!-- Main Content -->
  <div class="container mx-auto px-4 py-8">
    <div class="flex justify-between items-center mb-6">
      <h1 class="text-2xl font-bold text-gray-800">Your Orders</h1>
      <a href="/read-and-grow/profile/<%= user.id  %>" class="text-gray-600 hover:underline">Go Back</a>
    </div>

    <!-- Orders List -->
    <% if(orders.length > 0) {%>
    <div class="space-y-4">
      <!-- Order 1 -->
       <% orders.forEach(order=>{ %>
            <div class="bg-white p-4 rounded-lg shadow-sm border border-gray-200 flex justify-between items-start">
                <div class="w-full">
                <div class="flex justify-between items-center mb-2">
        
                        <a href="/read-and-grow/order-details/<%= order._id %>" class="font-medium text-gray-800">
                        Order #<%= order.orderId %> <span class="text-green-600 text-sm">[<%= order.status %>]</span>
                        </a>
                </div>
        
                <p class="text-gray-600">Placed on: 
                    <%= new Date(order.createdAt).toLocaleString('en-US', {
                        year: 'numeric',
                        month: 'long',  // Example: "January", "February"
                        day: 'numeric',
                        hour: '2-digit',
                        minute: '2-digit',
                        second: '2-digit',
                        hour12: true   // 12-hour format (AM/PM)
                    })  %>
                </p>
                <% orderedProducts.forEach(item=>{ %>
                    <p class="text-gray-600">Items: <%= item.name %></p>
                <% }) %>
                <p class="text-gray-600">Total: $<%= order.totalAmount %></p>
                </div>
                <!-- <div class="flex space-x-2 items-start">
                <button class="text-gray-600 hover:text-gray-900 viewDetailsBtn" data-order-id="ORD123456">
                    <i class="fas fa-eye"></i>
                </button>
                </div> -->
            </div>
      <% }) %>
    </div>
    <% }else{ %>
        <p class="text-center text-gray-600">Your cart is empty.</p>
    <% } %>
  <script>
    document.querySelectorAll('.viewDetailsBtn').forEach(button => {
      button.addEventListener('click', function () {
        const orderId = this.getAttribute('data-order-id');
        window.location.href = `/read-and-grow/order-details/${orderId}`;
      });
    });
  </script>
</body>

</html>