<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reset Password</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- Add Toastify CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">
</head>

<body class="bg-gray-100 flex items-center justify-center min-h-screen">

    <div class="bg-white p-8 rounded-2xl shadow-lg w-96 text-center">
        <!-- Title -->
        <h2 class="text-xl font-semibold italic mb-6">Forgot Password</h2>
        <form id="resetForm">
            <!-- New Password Field -->
            <div class="mb-4">
                <input type="password" id="newPassword" placeholder="New password"
                    class="w-full px-4 py-3 rounded-full border border-gray-300 focus:outline-none focus:ring-2 focus:ring-gray-500 ">
            </div>

            <!-- Confirm Password Field -->
            <div class="mb-6">
                <input type="password" id="confirmPassword" placeholder="Confirm Password"
                    class="w-full px-4 py-3 rounded-full border border-gray-300 focus:outline-none focus:ring-2 focus:ring-gray-500 ">
            </div>

            <!-- Submit Button -->
            <button type="submit"
                class="w-full bg-red-600 text-white py-2 rounded-[20px] hover:bg-red-700 transition duration-300">
                Reset Password
            </button>
        </form>
    </div>

    <!-- Add Toastify JS -->
    <script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const form = document.getElementById("resetForm");

            form.addEventListener("submit", async (e) => {
                e.preventDefault();

                const newPasswordInput = document.getElementById("newPassword");
                const confirmPasswordInput = document.getElementById("confirmPassword");

                if (!newPasswordInput || !confirmPasswordInput) {
                    console.error("Password input fields not found!");
                    return;
                }

                const newPassword = newPasswordInput.value;
                const confirmPassword = confirmPasswordInput.value;
                const urlParams = new URLSearchParams(window.location.search);
                const userId = urlParams.get("id");
                const token = urlParams.get("token");

                if (!newPassword || !confirmPassword) {
                    Toastify({
                        text: "Please fill in both password fields",
                        duration: 3000,
                        gravity: "top",
                        position: "right",
                        backgroundColor: "#dc2626",
                        stopOnFocus: true,
                    }).showToast();
                    return;
                }

                if (newPassword !== confirmPassword) {
                    Toastify({
                        text: "Passwords do not match",
                        duration: 3000,
                        gravity: "top",
                        position: "right",
                        backgroundColor: "#dc2626",
                        stopOnFocus: true,
                    }).showToast();
                    return;
                }

                const formData = {
                    password: newPassword,
                    confirmPassword: confirmPassword
                };

                try {
                    const response = await fetch(`/read-and-grow/resetPassword?id=${userId}&token=${token}`, {
                        method: "POST",
                        headers: {
                            "Content-Type": "application/json",
                        },
                        body: JSON.stringify(formData)
                    });

                    if (!response.ok) {
                        throw new Error(`HTTP error! status: ${response.status}`);
                    }

                    const data = await response.json();
                    console.log("Success:", data);

                    Toastify({
                        text: "Password updated successfully!",
                        duration: 3000,
                        gravity: "top",
                        position: "right",
                        backgroundColor: "#16a34a",
                        stopOnFocus: true,
                    }).showToast();

                    setTimeout(() => {
                        window.location.href='/read-and-grow/login'
                    }, 2000);

                } catch (error) {
                    console.error("Error:", error);
                    Toastify({
                        text: "An error occurred while updating the password",
                        duration: 3000,
                        gravity: "top",
                        position: "right",
                        backgroundColor: "#dc2626",
                        stopOnFocus: true,
                    }).showToast();
                }
            });
        });
    </script>

</body>

</html>
